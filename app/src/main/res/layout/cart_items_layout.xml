<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="5dp"
    android:background="@android:color/holo_blue_dark"
    android:elevation="10dp"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/cart_prod_img"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/cart_prod_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/cart_prod_img"
            android:text="Product Name"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cart_prod_quan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_prod_name"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/cart_prod_img"
            android:text="Product Quantity"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cart_prod_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_prod_quan"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/cart_prod_img"
            android:text="Product Price"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>