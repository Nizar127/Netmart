<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            android:background="@drawable/login">

            <ImageView
                android:id="@+id/login_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/login_hint_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/GhostWhite"
                android:layout_marginLeft="30dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/login_email_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:backgroundTint="@color/GhostWhite"
                android:hint="Email"
                android:inputType="textPersonName"
                android:padding="20dp"
                android:textColor="@color/GhostWhite"
                android:textColorHint="@color/GhostWhite"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/login_hint_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="@color/GhostWhite"
                android:layout_marginLeft="30dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/login_password_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/GhostWhite"
                android:padding="20dp"
                android:layout_margin="15dp"
                android:hint="Password"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890"
                android:inputType="textFilter"
                android:password="true"
                android:textColor="@color/GhostWhite"
                android:textColorHint="@color/GhostWhite"
                android:textSize="17sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/linear_layout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/login_password_input"
                android:layout_margin="5dp">

                <CheckBox
                    android:id="@+id/remember_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/GhostWhite"
                    android:text="Remember Me"
                    android:textColor="@color/GhostWhite"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/forget_password_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forget Password?"
                    android:textColor="@color/GhostWhite"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="98dp"/>

            </LinearLayout>

            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear_layout_1"
                android:backgroundTint="@color/colorBlueBackground"
                android:layout_margin="15dp"
                android:padding="20dp"
                android:textSize="18dp"
                android:text="Login"
                android:textColor="@color/White"/>





        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>